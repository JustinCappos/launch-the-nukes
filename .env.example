# Environment configuration for Launch the Nukes
# Copy this file to .env and customize for your local development

# ===========================================
# Basic Configuration
# ===========================================

# Enable debug mode (true for development, false for production)
DEBUG=true

# Flask secret key (generate a secure random key for production)
SECRET_KEY=launch-the-nukes-secret-key-2025-dev

# Server configuration
HOST=127.0.0.1
PORT=8080

# ===========================================
# Redis Configuration
# ===========================================

# Redis connection URL
REDIS_URL=redis://localhost:6379/0

# For Cloud Memorystore (GCP), use:
# REDIS_HOST=10.x.x.x
# REDIS_PORT=6379
# REDIS_URL=redis://10.x.x.x:6379/0

# ===========================================
# Worker Configuration
# ===========================================

# Number of worker processes (0 for production Cloud Run)
NUM_WORKERS=2

# Job timeout in seconds
JOB_TIMEOUT=300

# ===========================================
# LLM Provider Configuration
# ===========================================

# Ollama server URL (for local development)
OLLAMA_URL=http://localhost:11434

# Cloud Ollama service URL (set automatically in production)
# OLLAMA_CLOUD_URL=https://launch-nukes-ollama-xxx-uc.a.run.app

# Google AI (Gemini) API key (optional)
# GEMINI_API_KEY=your-gemini-api-key-here

# ===========================================
# Google Cloud Platform Configuration
# ===========================================

# GCP Project ID (required for production)
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Cloud Run service URL (set automatically in production)
# CLOUD_RUN_SERVICE_URL=https://your-service-url

# ===========================================
# Application Settings
# ===========================================

# MCP server cache duration in seconds
MCP_CACHE_DURATION=300

# Gunicorn workers (for production)
GUNICORN_WORKERS=4

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# Development Settings
# ===========================================

# Flask environment (development or production)
FLASK_ENV=development

# Enable Flask debug toolbar
FLASK_DEBUG_TB=true

# ===========================================
# Security Settings
# ===========================================

# Session timeout in seconds (24 hours)
SESSION_TIMEOUT=86400

# Maximum file upload size (in bytes)
MAX_CONTENT_LENGTH=10485760

# ===========================================
# Monitoring and Observability
# ===========================================

# Application name for logging
APP_NAME=launch-the-nukes

# Version for tracking deployments
APP_VERSION=1.0.0

# Environment name (dev, staging, prod)
ENVIRONMENT=dev
